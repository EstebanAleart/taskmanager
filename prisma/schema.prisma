generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Department {
  id        String    @id @default(cuid())
  name      String    @unique
  label     String
  color     String    @default("")
  bgColor   String    @default("")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
  users     User[]

  @@map("departments")
}

model FileType {
  id        String   @id @default(cuid())
  name      String   @unique
  label     String
  color     String   @default("")
  bgColor   String   @default("")
  extension String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files     File[]

  @@map("file_types")
}

model User {
  id            String          @id @default(cuid())
  name          String
  avatar        String          @default("")
  role          String
  departmentId  String
  initials      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  uploadedFiles File[]          @relation("FileUploader")
  projects      ProjectMember[]
  workspaces    WorkspaceMember[]
  assignedTasks Task[]          @relation("TaskAssignee")
  department    Department      @relation(fields: [departmentId], references: [id])

  @@map("users")
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  description String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members  WorkspaceMember[]
  projects Project[]

  @@map("workspaces")
}

model WorkspaceMember {
  workspaceId String
  userId      String
  role        String   @default("member")
  joinedAt    DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@id([workspaceId, userId])
  @@map("workspace_members")
}

model Project {
  id           String          @id @default(cuid())
  name         String
  description  String
  notes        String          @default("")
  departmentId String
  workspaceId  String
  color        String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  files        File[]
  links        ProjectLink[]
  members      ProjectMember[]
  columns      TaskColumn[]
  priorities   PriorityLevel[]
  department   Department      @relation(fields: [departmentId], references: [id])
  workspace    Workspace       @relation(fields: [workspaceId], references: [id])
  tasks        Task[]

  @@map("projects")
}

model ProjectLink {
  id        String   @id @default(cuid())
  title     String
  url       String
  projectId String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_links")
}

model TaskColumn {
  id        String  @id @default(cuid())
  name      String
  label     String
  color     String  @default("")
  icon      String  @default("")
  order     Int     @default(0)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@map("task_columns")
}

model PriorityLevel {
  id        String  @id @default(cuid())
  name      String
  label     String
  color     String  @default("")
  bgColor   String  @default("")
  dotColor  String  @default("")
  order     Int     @default(0)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@map("priority_levels")
}

model ProjectMember {
  userId    String
  projectId String
  joinedAt  DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@id([userId, projectId])
  @@map("project_members")
}

model Task {
  id          String        @id @default(cuid())
  title       String
  description String
  priorityId  String
  columnId    String
  dueDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  projectId   String
  assigneeId  String
  assignee    User          @relation("TaskAssignee", fields: [assigneeId], references: [id])
  column      TaskColumn    @relation(fields: [columnId], references: [id])
  priority    PriorityLevel @relation(fields: [priorityId], references: [id])
  project     Project       @relation(fields: [projectId], references: [id])
  tags        Tag[]         @relation("TagToTask")

  @@map("tasks")
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  tasks Task[] @relation("TagToTask")

  @@map("tags")
}

model File {
  id           String   @id @default(cuid())
  name         String
  typeId       String
  size         String
  url          String
  uploadedAt   DateTime @default(now())
  projectId    String
  uploadedById String
  project      Project  @relation(fields: [projectId], references: [id])
  type         FileType @relation(fields: [typeId], references: [id])
  uploadedBy   User     @relation("FileUploader", fields: [uploadedById], references: [id])

  @@map("files")
}


