generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

//
// ------------------------------
// DEPARTMENTS, USERS, WORKSPACES, PROJECTS
// ------------------------------
//

model Department {
  id        String    @id @default(cuid())
  name      String    @unique
  label     String
  color     String    @default("")
  bgColor   String    @default("")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[] @relation("DepartmentToProject")
  users     User[]

  @@map("departments")
}

model FileType {
  id        String   @id @default(cuid())
  name      String   @unique
  label     String
  color     String   @default("")
  bgColor   String   @default("")
  extension String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files     File[]

  @@map("file_types")
}

model User {
  id            String          @id @default(cuid())
  name          String
  email         String          @unique
  status        String          @default("active")
  auth0Id       String?         @unique
  avatar        String          @default("")
  role          String
  departmentId  String
  initials      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  uploadedFiles File[]          @relation("FileUploader")
  projects      ProjectMember[]
  workspaces    WorkspaceMember[]
  assignedTasks Task[]          @relation("TaskAssignee")
  createdTransactions FinancialTransaction[]

  department    Department      @relation(fields: [departmentId], references: [id])

  @@map("users")
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  description String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members  WorkspaceMember[]
  projects Project[]

  financialAccounts     FinancialAccount[]
  transactionCategories TransactionCategory[]
  financialTransactions FinancialTransaction[]
  budgets               Budget[]

  @@map("workspaces")
}

model WorkspaceMember {
  workspaceId String
  userId      String
  role        String   @default("member")
  joinedAt    DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@id([workspaceId, userId])
  @@map("workspace_members")
}

model Project {
  id          String          @id @default(cuid())
  name        String
  description String
  notes       String          @default("")
  workspaceId String
  color       String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())

  files       File[]
  links       ProjectLink[]
  members     ProjectMember[]
  columns     TaskColumn[]
  priorities  PriorityLevel[]
  departments Department[]    @relation("DepartmentToProject")
  workspace   Workspace       @relation(fields: [workspaceId], references: [id])
  tasks       Task[]

  financialTransactions FinancialTransaction[]

  @@map("projects")
}

model ProjectLink {
  id        String   @id @default(cuid())
  title     String
  url       String
  projectId String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_links")
}

model TaskColumn {
  id        String  @id @default(cuid())
  name      String
  label     String
  color     String  @default("")
  icon      String  @default("")
  order     Int     @default(0)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@map("task_columns")
}

model PriorityLevel {
  id        String  @id @default(cuid())
  name      String
  label     String
  color     String  @default("")
  bgColor   String  @default("")
  dotColor  String  @default("")
  order     Int     @default(0)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@map("priority_levels")
}

model ProjectMember {
  userId    String
  projectId String
  joinedAt  DateTime @default(now())

  project   Project  @relation(fields: [projectId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@id([userId, projectId])
  @@map("project_members")
}

model Task {
  id          String        @id @default(cuid())
  title       String
  description String
  priorityId  String
  columnId    String
  dueDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  projectId   String
  assigneeId  String

  assignee    User          @relation("TaskAssignee", fields: [assigneeId], references: [id])
  column      TaskColumn    @relation(fields: [columnId], references: [id])
  priority    PriorityLevel @relation(fields: [priorityId], references: [id])
  project     Project       @relation(fields: [projectId], references: [id])
  tags        Tag[]         @relation("TagToTask")

  @@map("tasks")
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  tasks Task[] @relation("TagToTask")

  @@map("tags")
}

model File {
  id           String   @id @default(cuid())
  name         String
  typeId       String
  size         String
  url          String
  uploadedAt   DateTime @default(now())
  projectId    String
  uploadedById String

  project      Project  @relation(fields: [projectId], references: [id])
  type         FileType @relation(fields: [typeId], references: [id])
  uploadedBy   User     @relation("FileUploader", fields: [uploadedById], references: [id])

  @@map("files")
}

//
// ------------------------------
// FINANCE MODULE (GESTION)
// ------------------------------
//

model FinancialAccount {
  id          String   @id @default(cuid())
  name        String
  description String   @default("")
  currency    String   @default("ARS")
  balance     Float    @default(0)

  workspaceId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace    Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  transactions FinancialTransaction[]

  @@index([workspaceId])
  @@map("financial_accounts")
}

model TransactionCategory {
  id          String   @id @default(cuid())
  name        String
  type        String // "income" | "expense"
  color       String   @default("")

  workspaceId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace    Workspace              @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  transactions FinancialTransaction[]

  @@unique([workspaceId, name])
  @@index([workspaceId])
  @@map("transaction_categories")
}

model FinancialTransaction {
  id          String   @id @default(cuid())
  amount      Float
  description String   @default("")
  date        DateTime @default(now())

  workspaceId String
  accountId   String
  categoryId  String
  projectId   String?
  createdById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspace   Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  account     FinancialAccount    @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category    TransactionCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  project     Project?            @relation(fields: [projectId], references: [id], onDelete: SetNull)
  createdBy   User                @relation(fields: [createdById], references: [id], onDelete: Restrict)

  attachments TransactionAttachment[]

  @@index([workspaceId])
  @@index([accountId])
  @@index([categoryId])
  @@index([projectId])
  @@index([createdById])
  @@index([date])
  @@map("financial_transactions")
}

model TransactionAttachment {
  id            String   @id @default(cuid())
  url           String
  name          String
  transactionId String
  uploadedAt    DateTime @default(now())

  transaction FinancialTransaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([transactionId])
  @@map("transaction_attachments")
}

model Budget {
  id          String   @id @default(cuid())
  name        String
  amount      Float
  description String   @default("")
  status      String   @default("pending") // "pending" | "approved" | "rejected"

  workspaceId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@map("budgets")
}

